{
  "name": "@ild-games/duckling",
  "repository": {
    "type": "git",
    "url": "https://github.com/ild-games/duckling"
  },
  "type": "commonjs",
  "version": "0.0.1",
  "scripts": {
    "start": "npm run build && concurrently \"npm run watch\" \"npm run duckling\" ",
    "test": "tsc && npm run mocha",
    "build": "gulp && tsc",
    "watch": "concurrently \"npm run gulp:w\" \"npm run tsc:w\"",
    "gulp": "gulp",
    "gulp:w": "gulp watch",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "mocha": "electron-mocha --renderer \"build/duckling-tests/**/*.spec.js\"",
    "mocha-debug": "electron-mocha --interactive \"build/duckling-tests/**/*.spec.js\"",
    "duckling": "electron build/electron/background-main.js",
    "format": "npm run format:ts && npm run format:scss",
    "format:ts": "prettier --parser typescript --config ./package.json --write \"src/**/*.ts\"",
    "format:scss": "prettier --parser scss --config ./package.json --write \"src/**/*.scss\""
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "8.2.14",
    "@angular/cdk": "8.2.3",
    "@angular/common": "8.2.14",
    "@angular/compiler": "8.2.14",
    "@angular/core": "8.2.14",
    "@angular/forms": "8.2.14",
    "@angular/http": "7.2.15",
    "@angular/material": "8.2.3",
    "@angular/platform-browser": "8.2.14",
    "@angular/platform-browser-dynamic": "8.2.14",
    "@angular/upgrade": "8.2.14",
    "@pixi/canvas-renderer": "^5.2.0",
    "es6-shim": "0.35.5",
    "font-awesome": "4.7.0",
    "glob": "7.1.6",
    "gulp": "4.0.2",
    "gulp-sass": "5.0.0",
    "gulp-watch": "5.0.1",
    "hammerjs": "^2.0.8",
    "howler": "2.1.2",
    "immutable": "4.0.0-rc.12",
    "lodash": "4.17.15",
    "mathjs": "6.2.5",
    "open-iconic": "1.1.1",
    "pixi.js": "5.2.0",
    "redux": "4.0.4",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.5.3",
    "rxjs-compat": "6.5.3",
    "sass": "1.45.1",
    "systemjs": "6.1.5",
    "webfontloader": "1.6.28",
    "zone.js": "0.10.2"
  },
  "devDependencies": {
    "@types/chai": "4.2.5",
    "@types/chai-spies": "1.0.1",
    "@types/glob": "7.1.1",
    "@types/hammerjs": "2.0.36",
    "@types/howler": "2.1.2",
    "@types/lodash": "4.14.149",
    "@types/mathjs": "6.0.2",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.14",
    "@types/webfontloader": "1.6.29",
    "chai": "4.2.0",
    "chai-spies": "1.0.0",
    "concurrently": "5.0.0",
    "electron": "11.0.0",
    "electron-mocha": "8.1.2",
    "mocha": "6.2.2",
    "prettier": "1.19.1",
    "typescript": "4.5.4"
  },
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
